@model MovieBlog.Models.Post

@{
    ViewData["Title"] = "Details";
}

<section class="blog-posts py-3">
    <div class="container">
        <div class="row">
            <div class="col-9 color">
                <div class="post-image">
                    <img src="~/Posts/@Model.Id/PostImage.jpg" asp-append-version="true" class="img-fluid" alt="Slika članka">
                </div>
                <div class="post-title">
                    <h2 class="font-weight-bold"> @Html.DisplayFor(model => model.Title)</h2>
                </div>
                <div class="post-content">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Body)</h5>
                </div>
            </div>
            <div class="col-3 color">

                <div class="m-5">
                    <a asp-action="Edit" asp-route-id="@Model.Id"><h2 class="font-weight-bold btn btn-primary color me-3">Uredi</h2></a>
                    <a asp-action="Delete" asp-route-id="@Model.Id"><h2 class="font-weight-bold btn btn-primary color me-3">Obriši</h2></a>
                </div>
            </div>
        </div>
    </div>

</section>